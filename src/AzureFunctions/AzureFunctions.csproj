<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyTitle>AzureFunctions</AssemblyTitle>
    <AzureFunctionsVersion>v2</AzureFunctionsVersion>
    <DebugType>full</DebugType>
    <Description>Custom Azure Functions.</Description>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Summary>Custom Azure Functions.</Summary>
    <RootNamespace>MartinCostello.AzureFunctions</RootNamespace>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <UseNETCoreGenerator>true</UseNETCoreGenerator>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Sdk.Functions" Version="1.0.24" />
    <PackageReference Include="Microsoft.Azure.Management.AppService.Fluent" Version="1.19.0" />
    <PackageReference Include="Microsoft.Azure.Management.Fluent" Version="1.19.0" />
    <PackageReference Include="Microsoft.Azure.WebJobs.Extensions.Storage" Version="3.0.3" />
    <PackageReference Include="NodaTime" Version="2.4.4" />
    <PackageReference Include="Refit" Version="4.6.58" />
  </ItemGroup>
  <ItemGroup>
    <None Update="host.json" CopyToOutputDirectory="PreserveNewest" />
    <None Update="local.settings.json" CopyToOutputDirectory="PreserveNewest" CopyToPublishDirectory="Never" />
  </ItemGroup>
</Project>
